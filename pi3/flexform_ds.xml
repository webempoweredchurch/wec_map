<T3DataStructure>
	<sheets>
		<default>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.sheet</sheetTitle>
					<cshFile>LLL:EXT:wec_map/csh/locallang_csh_ff.xml</cshFile>
				</TCEforms>
				<type>array</type>
				<el>
					<tables>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.tables</label>
							<config>
								<type>select</type>
								<renderMode>singlebox</renderMode>
								<minitems>0</minitems>
								<maxitems>99999999</maxitems>
								<size>5</size>
								<items type="array">
								</items>
								<itemsProcFunc>tx_wecmap_backend->getMappableTables</itemsProcFunc>
							</config>
						</TCEforms>						
					</tables>
					<kml>
						<TCEforms>
                            <label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.kml</label>
				            <config>
				                <type>select</type>
				                <foreign_table>tx_wecmap_external</foreign_table>
				                <size>5</size>
				                <maxitems>10000</maxitems>
				                <minitems>0</minitems>
				                <show_thumbs>1</show_thumbs>
				            </config>
						</TCEforms>
					</kml>
					<pid>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.php:LGL.startingpoint</label>
				            <config>
				                <type>group</type>
				                <internal_type>db</internal_type>
				                <allowed>pages</allowed>
				                <size>3</size>
				                <maxitems>22</maxitems>
				                <minitems>0</minitems>
				                <show_thumbs>1</show_thumbs>
				            </config>
						</TCEforms>
					</pid>
				</el>
			</ROOT>
		</default>
		
		<mapConfig>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.mapTitle</sheetTitle>
					<cshFile>LLL:EXT:wec_map/csh/locallang_csh_ff.xml</cshFile>
				</TCEforms>
				<type>array</type>
				<el>
					<mapWidth>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.mapWidth</label>
							<config>
								<type>input</type>
								<size>5</size>
							</config>
						</TCEforms>
					</mapWidth>
						
					<mapHeight>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.mapHeight</label>
							<config>
								<type>input</type>
								<size>5</size>
							</config>
						</TCEforms>
					</mapHeight>
					
					<initialMapType>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.initialMapType</label>
							<config>
								<type>radio</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.typeNormal</numIndex>
										<numIndex index="1">G_NORMAL_MAP</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.typeSatellite</numIndex>
										<numIndex index="1">G_SATELLITE_MAP</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.typeHybrid</numIndex>
										<numIndex index="1">G_HYBRID_MAP</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.typePhysical</numIndex>
										<numIndex index="1">G_PHYSICAL_MAP</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>						
					</initialMapType>
					<showDirections>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.showDirs</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showDirections>
					<showWrittenDirections>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.showWrittenDirs</label>
							<!-- <displayCond>FIELD:showDirections:REQ:true</displayCond> -->
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showWrittenDirections>
					<showRadiusSearch>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.showRadiusSearch</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showRadiusSearch>
					<showSidebar>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.showSidebar</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showSidebar>
					<prefillAddress>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.prefillAddress</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</prefillAddress>
				</el>
			</ROOT>
		</mapConfig>
		
		<mapControls>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.controlsTitle</sheetTitle>
					<cshFile>LLL:EXT:wec_map/csh/locallang_csh_ff.xml</cshFile>
				</TCEforms>
				<type>array</type>
				<el>
					<mapControlSize>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conLargeMap</label>
							<config>
								<type>radio</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conLargeMapL</numIndex>
										<numIndex index="1">large</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conLargeMapS</numIndex>
										<numIndex index="1">small</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conLargeMapZ</numIndex>
										<numIndex index="1">zoomonly</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conNone</numIndex>
										<numIndex index="1">none</numIndex>
									</numIndex>
								</items>
								<default>3</default>
							</config>
						</TCEforms>
					</mapControlSize>
						
					<overviewMap>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conOverview</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</overviewMap>
				
					<scale>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conScale</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</scale>
							
					<mapType>
						<TCEforms>
							<label>LLL:EXT:wec_map/locallang_db.xml:tt_content.pi_flexform.conType</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</mapType>
				</el>
			</ROOT>
		</mapControls>
	</sheets>
</T3DataStructure>
